<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StatisticsItemTheme"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_margin="4dp"
    android:orientation="horizontal"
    android:weightSum="100"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/textStatisticsRank"
        style="@style/StatisticsItemTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_weight="15"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:text="#1" />

    <TextView
        android:id="@+id/textStatisticsName"
        style="@style/StatisticsItemTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="40"
        android:textAlignment="center"
        android:textSize="14sp"
        tools:text="PlayerName" />

    <LinearLayout
        style="@style/StatisticsItemTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="25"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textStatisticsLevel"
            style="@style/StatisticsItemTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Level 13" />

        <TextView
            android:id="@+id/textStatisticsAccuracy"
            style="@style/StatisticsItemTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="89% accuracy" />

    </LinearLayout>

    <LinearLayout
        style="@style/StatisticsItemTheme"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:gravity="center">

        <TextView
            android:id="@+id/textStatisticsDate"
            style="@style/StatisticsItemTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            tools:text="2019-11-23" />

    </LinearLayout>


</LinearLayout>